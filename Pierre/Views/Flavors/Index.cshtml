@{
  Layout = "_Layout";
}

@using Pierre.Models;
@model List<Pierre.Models.Flavor>;

<h1>Items</h1>

@if (@Model.Count == 0)
{
  <h3>No flavors have been added yet!</h3>
} 

@foreach (Flavor flavor in Model)
{
  <li>@Html.ActionLink($"{flavor.Description}", "Details", new { id = flavor.FlavorId })</li>
}

<p>@Html.ActionLink("Add a new flavor", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>