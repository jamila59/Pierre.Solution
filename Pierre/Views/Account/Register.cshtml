@{
  Layout = "_Layout";
}

@using Pierre.ViewModels

@model RegisterViewModel

<h2>Register a new user</h2>
<hr />
@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.LabelFor(user => user.Email , new { @class = "textBox"})
    @Html.TextBoxFor(user=> user.Email, new { @class = "textBox"})

    @Html.LabelFor(user=> user.Password, new { @class = "textBox"})
    @Html.PasswordFor(user=> user.Password, new { @class = "textBox"})

    @Html.LabelFor(user=> user.ConfirmPassword, new { @class = "textBox"})
    @Html.PasswordFor(user=> user.ConfirmPassword)

    <input type="submit" value="Register" />
}